<div id="main-content" class="blog-page">
  <div class="container">
    <div class="row clearfix">
      <div class="col-lg-8 col-md-12 left-box">
        <div class="card single_post">
          <div class="body">
            <div class="row">
              <% if @post.medias.attached? %> <% @post.medias.each do |media| %>
              <div class="col-md-4">
                <img
                  src="<%= file_path(media) %>"
                  class="d-block w-100 img-fluid w-50 rounded m-1"
                  alt="Image description for image"
                />
              </div>
              <% end %> <% end %>
            </div>
            <h3 class="mt-4">
              <a href="blog-details.html">All photographs are accurate</a>
            </h3>
            <p><%= @post.caption %>.</p>
          </div>
        </div>
        <turbo-frame id="likes">
          <div>
            <% if current_user_post_like?(@post) %> 
              <%= link_to likes_path({post_id: @post.id}), data: {turbo_method: :delete} do %> 
                Unlike
              <% end %> 
            <% else %> 
              <%= link_to post_likes_path(@post), data: {turbo_method: :post} do %> 
                Like
              <% end %> 
            <% end %>
          </div>            
        </turbo-frame>
        <div class="card mt-4">
          <%= render 'shared/comment_form', {post: @post} %>
        </div>
        <div class="card">
          <turbo-frame id="counts">
            <div class="header">
              <h2><%= pluralize(@post.comments.count, "comment") %></h2>
            </div>
          </turbo-frame>
          <turbo-frame id="messages">
            <div style="height: 600px" class="overflow-y-scroll">
              <%= render @post.comments %>
            </div>
          </turbo-frame>
        </div>
      </div>
